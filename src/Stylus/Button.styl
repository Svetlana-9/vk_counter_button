
.btn
    box-sizing: border-box
    width max-content
    border-radius: 9.3px
    font-family: Roboto;
    font-weight: 600;
    display: flex
    justify-content: center
    align-items: center
    position relative
    cursor pointer
    border 0

.btn_primary
    background-color #FF7700
    color white
    .loader
      border-bottom-color:#FF7700

.btn_primary:hover
    background-color rgb(255, 135, 88)
    animation-timing-function cubic-bezier(0, -0.3, 0.5, 1.3)
    transition-duration 500ms

.btn_primary:active
    background-color rgb(253, 152, 111)
    transform scale(0.95)
    transition-duration 500ms
    animation-timing-function cubic-bezier(0, -0.3, 0.5, 1.3)

.btn_secondary
    background-color rgb(226, 224, 223)
    color black
    .loader
      border-bottom-color rgb(226, 224, 223)
    
.btn_secondary:hover
    background-color rgb(206, 206, 203)
    animation-timing-function cubic-bezier(0, -0.3, 0.5, 1.3)
    transition-duration 500ms

.btn_secondary:active
    background-color rgb(167, 165, 165)
    transform: scale(0.95)
    transition-duration 500ms
    animation-timing-function cubic-bezier(0, -0.3, 0.5, 1.3)

.btn_size_28
    padding 6px 10px
    height 28px
    font-size: 13px
    .loader
      width 16px
      height 16px
    .content
        gap 4px

.btn_size_36
    padding 8px 12px
    height 36px
    font-size: 15px
    .loader 
      width 20px
      height 20px
    .content
        gap 6px

.btn_size_56
    padding 16px 16px
    height 56px
    font-size: 17px;
    .loader 
      width 24px
      height 24px
    .content
        gap 8px

.loader
    border 3px solid rgb(255, 255, 255)
    border-radius 50%
    display inline-block
    box-sizing border-box
    animation rotation 2s linear infinite
    position absolute

@keyframes rotation 
  0% 
    transform rotate(0deg);
  
  100% 
    transform rotate(360deg);
  
.content
    display flex
    align-items: center

.contentLoading 
    opacity 0%

.loading
    pointer-events none

.btn:disabled
    pointer-events none
    opacity 50%

.focused
    border 2px solid rgb(0, 0, 0)
